import os
from cherrypy import wsgiserver

class HelloWorld(object):
    def index(self):
        return "Hello World!"
    index.exposed = True

server = wsgiserver.CherryPyWSGIServer(
            (os.environ.get('OPENSHIFT_PYTHON_IP', '127.0.0.1'), 
             os.environ.get('OPENSHIFT_PYTHON_PORT', 8080)), 
             HelloWorld, 
             server_name=os.environ.get('OPENSHIFT_APP_DNS', 'cherrypy.example.com'))

server.start()
