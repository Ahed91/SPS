import os
import cherrypy

class HelloWorld(object):
    def index(self):
        return "Hello World!"
    index.exposed = True


cherrypy.server.socket_port = os.environ.get('OPENSHIFT_PYTHON_PORT', 8080)
cherrypy.server.socket_host = os.environ.get('OPENSHIFT_PYTHON_IP', '127.0.0.1')
cherrypy.quickstart(HelloWorld())
